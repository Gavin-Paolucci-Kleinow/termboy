#!/bin/bash

if [ -e "keymap.conf" ]
then
  rm keymap.conf
fi

echo "this script generates key mapping for your termboy controls"
echo "you can choose from the a-z keys and the standard 0-9 keys"
echo "any numpad mapping will result in mappings to the number row"
printf "\n"

declare -a Key_array
Key_array=("*" "*" "*" "*" "*" "*" "*" "*" "*")

echo "enter the key you want mapped to \"A\""
read temp;
Key_array[0]=$temp

echo "enter the key you want mapped to \"B\""
read temp;
Key_array[1]=$temp

echo "enter the key you want mapped to \"Start\""
read temp;
Key_array[2]=$temp

echo "enter the key you want mapped to \"Select\""
read temp;
Key_array[3]=$temp

echo "enter the key you want mapped to \"Power Switch\""
read temp;
Key_array[4]=$temp

echo "enter the key you want mapped to \"Up (D-Pad)\""
read temp;
Key_array[5]=$temp

echo "enter the key you want mapped to \"Down (D-Pad)\""
read temp;
Key_array[6]=$temp

echo "enter the key you want mapped to \"Left (D-Pad)\""
read temp;
Key_array[7]=$temp

echo "enter the key you want mapped to \"Right (D-Pad)\""
read temp;
Key_array[8]=$temp

for index in 0 1 2 3 4 5 6 7 8 
do
	Key_array[index]=$(echo ${Key_array[index]} | tr '[:upper:]' '[:lower:]')
done

for index in 0 1 2 3 4 5 6 7 8
do
	case "${Key_array[index]}" in

		1) echo "0x02" >> ~/.config/termboy/Keymap.conf
			;;
		2) echo "0x03" >> keymap.conf
   			;;
		3) echo "0x04" >> keymap.conf
			;;
		4) echo "0x05" >> keymap.conf
			;;
		5) echo "0x06" >> keymap.conf
			;;
		6) echo "0x07" >> keymap.conf
			;;
		7) echo "0x08" >> keymap.conf
			;;
		8) echo "0x09" >> keymap.conf
			;;
		9) echo "0x0a" >> keymap.conf
			;;
		0) echo "0x0b" >> keymap.conf
			;;
		q) echo "0x10" >> keymap.conf
			;;
		w) echo "0x11" >> keymap.conf
			;;
		e) echo "0x12" >> keymap.conf
			;;
		r) echo "0x13" >> keymap.conf
			;;
		t) echo "0x14" >> keymap.conf
			;;
		y) echo "0x15" >> keymap.conf
			;;
		u) echo "0x16" >> keymap.conf
			;;
		i) echo "0x17" >> keymap.conf
			;;
		o) echo "0x18" >> keymap.conf
			;;
		p) echo "0x19" >> keymap.conf
			;;
		a) echo "0x1e" >> keymap.conf
			;;
		s) echo "0x1f" >> keymap.conf
			;;
		d) echo "0x20" >> keymap.conf
			;;
		f) echo "0x21" >> keymap.conf
			;;
		g) echo "0x22" >> keymap.conf
			;;
		h) echo "0x23" >> keymap.conf
			;;
		j) echo "0x24" >> keymap.conf
			;;
		k) echo "0x25" >> keymap.conf
			;;
		l) echo "0x26" >> keymap.conf
			;;
		z) echo "0x2c" >> keymap.conf
			;;
		x) echo "0x2d" >> keymap.conf
			;;
		c) echo "0x2e" >> keymap.conf
			;;
		v) echo "0x2f" >> keymap.conf
			;;
		b) echo "0x30" >> keymap.conf
			;;
		n) echo "0x31" >> keymap.conf
			;;
		m) echo "0x32" >> keymap.conf
			;;
		*) echo "invalid input"
			;;
	esac
done
