#!/bin/bash
#!/usr/bin/sh

if [ $# -ne 1 ]
then
    echo "Usage: $0 <ROM>"
    exit 1
fi

if [ ! -f $1 ]
then
    echo "$0: No such file"
    exit 1
fi

clear
setfont -o  font.orig
setfont -h4 font.psfu.gz

out/termboy $1
ret=$?

stty sane
kbd_mode -a
setfont font.orig
rm font.orig
clear

if [ $ret -ne 0 ]
then
    echo "$0: Terminated unexpectedly"
    exit 1
fi
